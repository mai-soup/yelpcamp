<% layout("layouts/boilerplate") -%>
    <h1>Sign Up</h1>
    <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-2">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="user[username]" id="username" class="form-control" required autofocus />
            <div class="invalid-feedback">
                Username is required.
            </div>
        </div>
        <div class="mb-2">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="user[email]" id="email" class="form-control" required />
            <div class="invalid-feedback">
                Email address is required.
            </div>
        </div>
        <div class="mb-2">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="user[password]" id="password" class="form-control" required />
            <div class="invalid-feedback">
                Password is required.
            </div>
        </div>
        </div>
        <div class="mb-2">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>