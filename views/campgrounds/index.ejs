<% layout("layouts/boilerplate") -%>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Add new</a>
    <% for (let camp of camps) { %>
        <div class="card mb-2">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= camp.image %>" alt="<%= camp.title %>" class="img-fluid" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text text-muted">
                            <%= camp.location %>
                        </p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>