<% layout("layouts/boilerplate") -%>
    <h1>Add Campground</h1>
    <form action="/campgrounds" method="post">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="campground[title]" id="title" class="form-control" />
        </div>
        <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="campground[location]" id="location" class="form-control" />
        </div>
        <div class="mb-2">
            <label for="price" class="form-label">Price per night</label>
            <div class="input-group">
                <div class="input-group-text">$</div>
                <input type="number" name="campground[price]" id="price" class="form-control" min="0" step="0.01" />
            </div>
        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" name="campground[image]" id="image" class="form-control" />
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea name="campground[description]" id="description" class="form-control"></textarea>
        </div>
        <div class="mb-2">
            <button type="submit" class="btn btn-primary">Add</button>
            <a href="/campgrounds" class="btn btn-secondary">Back to List</a>
        </div>
    </form>